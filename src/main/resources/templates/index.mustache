{{>layout/header}}
<body style="width: 100%; height: 100%;">
{{>layout/navigation}}
<div class="container-fluid" id="container-content">
    <div class="row">
        <!-- Content -->
        {{>layout/category}}
        <div class="col-sm-8" id="root" style="overflow: auto;">
            <!-- Index Content -->
            <!-- Item List -->
            <div id="div-sales-item-list" class="contentDiv">
                <div class="categoryTitle">
                    <p id="title">
                        <a class="main text-decoration-none">BEST</a>
                    </p>
                    <div id="div-sub-cates"></div>
                </div>
                <div class="row" id="div-thumb">

                </div>
                <div id="div-load-more-items"></div>
            </div>
            <!-- //Item List -->
            <!-- Item Detail -->
            <div class="d-none p-2 contentDiv" id="div-sales-item-detail">
                <div>
                    <p id="breadcrumb">
                        <a class="categoryTitle all" href="" onclick="return false;">
                            All
                        </a>
                        <span class="cateArea main">
                            >
                            <a class="categoryTitle" href="" onclick="return false;">
                                Main Category
                            </a>
                            <input type="hidden" name="categoryId" />
                        </span>
                        <span class="cateArea sub d-none">
                            >
                            <a class="categoryTitle" href="" onclick="return false;">
                                Sub Category
                            </a>
                            <input type="hidden" name="categoryId" />
                        </span>
                    </p>

                </div>
                <div class="row text-center">
                    <div class="col-sm-9">
                        <div class="row mb-lg-5">
                            <div class="text-center" id="div-item-detail-thumbnail">
                                <img src="" id="img-thumbnail" />
                            </div>
                        </div>
                        <div class="row mb-lg-5">
                            <div id="div-item-detail-notice">
                                <p id="p-notice"></p>
                            </div>
                        </div>
                        <div class="row mb-5">
                            <div id="div-item-detail-description" >
                                <textarea class="text-center border-0" id="text-description" readonly></textarea>
                            </div>
                        </div>
                        <div class="row mb-lg-5">
                            <div class="text-center" id="div-item-detail-image">
                                <img src="" id="img-detail"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 text-left pl-5 pr-2" id="div-item-summary" >
                        <div id="div-item-detail-name">
                            <b><p id="p-name"></p></b>
                        </div>
                        <div class="mb-lg-5" id="div-item-detail-price">
                            <p><span id="p-price"></span> won</p>
                        </div>
                        <div class="info" id="div-item-detail-size">
                            <div>사이즈</div>
                            <div id="p-size"></div>
                        </div>
                        <div class="info" id="div-item-detail-material">
                            <div>소재</div>
                            <div id="p-material"></div>
                        </div>
                        <div class="info" id="div-item-detail-options">
                            <p>옵션</p>
                            <select id="select-option"></select>
                        </div>
                        <div class="mb-5" id="div-selected-result">

                        </div>
                        <div>
                            <a class="btn btn-sm btn-primary" id="btn-add-cart" >장바구니</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- //Item Detail -->
            <!-- Cart -->
            <div class="d-none p-2 contentDiv" id="div-cart" >
                <h4 class="mb-3">장바구니</h4>
                <div class="mb-3">
                    <table class="table table-horizontal table-bordered">
                        <thead class="thead-strong">
                        <tr>
                            <th width="3%">선택</th>
                            <th >상품명</th>
                            <th width="10%">수량</th>
                            <th width="10% ">금액</th>
                            <th width="15%"></th>
                        </tr>
                        </thead>
                        <tbody id="cart-items">

                        </tbody>
                    </table>
                    <a class="btn btn-lg btn-primary" id="btn-order">주문하기</a>
                </div>
            </div>
            <!-- // Cart -->
            <!-- Order -->
            <div class="d-none p-2 contentDiv" id="div-order" >
                <div class="mb-3 orderItemInfo">
                    <h4 class="mb-3">주문상품정보</h4>
                    <table class="table table-horizontal table-bordered">
                        <thead class="thead-strong">
                        <tr>
                            <th >상품명</th>
                            <th width="10%">수량</th>
                            <th width="10% ">금액</th>
                        </tr>
                        </thead>
                        <tbody id="order-items">

                        </tbody>
                    </table>
                    <div class="amountInfo">
                        <h5>가용포인트</h5>
                        <div class="usablePoints"></div>
                        <div class="usePoints">
                            <label for="use-all-points" >포인트 전부 사용</label>
                            <input type="checkbox" id="use-all-points" />
                            <input type="text" name="usedPoints" /> P
                        </div>
                        <h5 class="float-right text-right">총 주문금액</h5>
                        <div class="totalAmount text-right"></div>
                    </div>
                </div>
                <h4 class="mb-3">주문정보</h4>
                <div class="mb-3 ordererInfo">
                    <form id="form-order-info">
                        <div class="form-group form-row">
                            <div class="col-sm-2"><label for="orderName">주문자명</label></div>
                            <div class="col-sm-10"><input type="text" class="form-control" name="orderName" id="orderName" /></div>
                        </div>

                        <div class="form-group form-row">
                            <div class="col-sm-2"><label for="orderTel">휴대전화</label></div>
                            <input type="hidden" name="tel" id="orderTel"/>
                            <div class="col-sm-3"><input type="text" class="form-control" id="orderTel1" /></div> -
                            <div class="col-sm-3"><input type="text" class="form-control" id="orderTel2" /></div> -
                            <div class="col-sm-3"><input type="text" class="form-control" id="orderTel3" /></div>
                        </div>
                        <div class="form-group form-row">
                            <div class="col-sm-2">주소</div>
                            <div class="col-sm-1">
                                <input type="button" class="btn btn-sm btn-outline-primary" onclick="sample4_execDaumPostcode()" value="주소 찾기"><br>
                            </div>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" name="addr1" id="orderAddr1" />
                            </div>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" name="addr2" id="orderAddr2" />
                            </div>
                        </div>
                    </form>
                </div>
                <h4 class="mb-3">배송정보</h4>
                <div class="mb-3 deliverInfo">
                    <form id="form-deliver-info">
                        <div class="form-group form-row">
                            <div class="col-sm-2"><label for="receiverName">배송인</label></div>
                            <div class="col-sm-10"><input type="text" class="form-control" name="receiverName" id="receiverName" /></div>
                        </div>

                        <div class="form-group form-row">
                            <div class="col-sm-2"><label for="receiverTel">휴대전화</label></div>
                            <input type="hidden" name="receiverTel" id="receiverTel"/>
                            <div class="col-sm-3"><input type="text" class="form-control" id="receiverTel1" /></div> -
                            <div class="col-sm-3"><input type="text" class="form-control" id="receiverTel2" /></div> -
                            <div class="col-sm-3"><input type="text" class="form-control" id="receiverTel3" /></div>
                        </div>
                        <div class="form-group form-row">
                            <div class="col-sm-2">주소</div>
                            <div class="col-sm-1">
                                <input type="button" class="btn btn-sm btn-outline-primary" onclick="sample4_execDaumPostcode()" value="주소 찾기"><br>
                            </div>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" name="receiverAddr1" id="receiverAddr1" />
                            </div>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" name="receiverAddr2" id="receiverAddr2" />
                            </div>
                        </div>
                        <div class="form-group form-row">
                            <div class="col-sm-2"><label for="message">배송메세지</label></div>
                            <div class="col-sm-10"><input type="text" class="form-control" name="message" id="message" /></div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- // Order -->
            <!-- // Index Content-->
{{>layout/footer}}