{{>layout/header}}
<body style="width: 100%; height: 100%;">
{{>layout/navigation}}
<div class="container-fluid" id="container-content">
    <div class="row">
        <!-- Content -->
        {{>layout/category}}
        <div class="col-sm-8" id="root" style="overflow: auto;">
            <!-- Index Content -->
            <div id="div-sales-item-list">
                <div class="categoryTitle">
                    <p id="title">
                        <a class="main text-decoration-none">BEST</a>
                    </p>
                    <div id="div-sub-cates"></div>
                </div>
                <div class="row" id="div-thumb">

                </div>
                <div id="div-load-more-items"></div>
            </div>
            <div class="d-none p-2" id="div-sales-item-detail">
                <div>
                    <p id="breadcrumb">
                        <a class="categoryTitle all" href="" onclick="return false;">
                            All
                        </a>
                        <span class="cateArea main">
                            >
                            <a class="categoryTitle" href="" onclick="return false;">
                                Main Category
                            </a>
                            <input type="hidden" name="categoryId" />
                        </span>
                        <span class="cateArea sub d-none">
                            >
                            <a class="categoryTitle" href="" onclick="return false;">
                                Sub Category
                            </a>
                            <input type="hidden" name="categoryId" />
                        </span>
                    </p>

                </div>
                <div class="row text-center">
                    <div class="col-sm-9">
                        <div class="row mb-lg-5">
                            <div class="text-center" id="div-item-detail-thumbnail">
                                <img src="" id="img-thumbnail" />
                            </div>
                        </div>
                        <div class="row mb-lg-5">
                            <div id="div-item-detail-notice">
                                <p id="p-notice"></p>
                            </div>
                        </div>
                        <div class="row mb-5">
                            <div id="div-item-detail-description" >
                                <textarea class="text-center border-0" id="text-description" readonly></textarea>
                            </div>
                        </div>
                        <div class="row mb-lg-5">
                            <div class="text-center" id="div-item-detail-image">
                                <img src="" id="img-detail"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 text-left pl-5 pr-2" id="div-item-summary" >
                        <div id="div-item-detail-name">
                            <b><p id="p-name"></p></b>
                        </div>
                        <div class="mb-lg-5" id="div-item-detail-price">
                            <p><span id="p-price"></span> won</p>
                        </div>
                        <div class="mb-5" id="div-item-detail-size">
                            <p>사이즈</p>
                            <p id="p-size"></p>
                        </div>
                        <div id="div-item-detail-material">
                            <p>소재</p>
                            <p id="p-material"></p>
                        </div>
                        <div class="mb-5" id="div-item-detail-options">
                            <select id="select-option"></select>
                        </div>
                        <div>
                            <a class="btn btn-sm btn-primary" id="btn-add-cart" >장바구니</a>
                        </div>
                    </div>
                </div>
                <!-- // Index Content-->
            </div>
{{>layout/footer}}