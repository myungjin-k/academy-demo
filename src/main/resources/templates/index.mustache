{{>layout/header}}

<!-- Index Content -->

<div id="div-sales-item-list">
    <div>
        <p class="categoryTitle">BEST</p>
    </div>
    <div class="row" id="div-thumb">

    </div>
    <div id="div-load-more-items"></div>
</div>
<div class="d-none" id="div-sales-item-detail">
    <div class="row text-center">
        <div class="col-sm-9">
            <div class="row mb-lg-5">
                <div id="div-item-detail-thumbnail">
                    <img src="" id="img-thumbnail" style="width: 100%;"/>
                </div>
            </div>
            <div class="row mb-lg-5">
                <div id="div-item-detail-notice">
                    <p id="p-notice"></p>
                </div>
            </div>
            <div class="row mb-5">
                <div id="div-item-detail-description" style="width: 640px; height: 860px;">
                    <textarea class="text-center border-0" id="text-description" style="width: 100%; height: 100%;  overflow-y: visible;" readonly></textarea>
                </div>
            </div>
            <div class="row mb-lg-5">
                <div id="div-item-detail-image">
                    <img src="" id="img-detail" style="width: 100%" />
                </div>
            </div>
        </div>
        <div class="col-sm-3 text-left pl-5 pr-2" id="div-item-summary" style="line-height: 1.2em;">
            <div id="div-item-detail-name">
                <b><p id="p-name"></p></b>
            </div>
            <div class="mb-lg-5" id="div-item-detail-price">
                <p><span id="p-price"></span> won</p>
            </div>
            <div id="div-item-detail-size">
                <p>사이즈</p>
                <p id="p-size"></p>
            </div>
            <div id="div-item-detail-material">
                <p>소재</p>
                <p id="p-material"></p>
            </div>
            <div id="div-item-detail-options">
                <select id="select-option"></select>
            </div>
        </div>
    </div>
</div>
<!-- /.container -->
<script src="/static/js/item.js"></script>
<script src="/static/js/itemDetail.js"></script>
{{>layout/footer}}