                        <thead class="thead-strong">
                        <tr>
                            <th>상품명</th>
                            <th width="15%">옵션</th>
                            <th width="10%">주문수량</th>
                            <th width="10%">상품금액</th>
                            <th width="10%"></th>
                        </tr>
                        </thead>
                        <tbody id="delivery-items">

                        </tbody>
                    </table>
                </div>
            </div>
