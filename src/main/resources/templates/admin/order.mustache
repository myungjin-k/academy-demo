{{>admin/layout/header}}

<div class="container" id="div-order-management" >
    <ul class="nav nav-tabs" id="adminOrderTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="tab-order" data-toggle="tab" href="#div-order" role="tab" aria-controls="div-order" aria-selected="true">배송상품조회</a>
        </li>
        <li class="nav-item" >
            <a class="nav-link" id="tab-code" data-toggle="tab" href="#div-delivery" role="tab" aria-controls="div-delivery" aria-selected="false" style="display: none;">주문</a>
        </li>
    </ul>
    <div class="tab-content" id="adminOrderTabContent">
        <div class="tab-pane fade show active" id="div-order" role="tabpanel" aria-labelledby="tab-order">
            <div class="pl-5 pt-3 pb-3 mt-3 mb-3 bg-light">
                <label class="mr-2" for="btn-search-delivery-item">주문번호</label>
                <input class="mr-2" type="text" name="code" id="input-search-delivery-item" >
                <a class="btn btn-sm btn-primary" id="btn-search-delivery-item">검색</a>

            </div>
            <!--<div class="div-crud-buttons">
                <a class="btn btn-outline-primary" id="btn-load-groups">코드그룹 불러오기</a>
                <a class="btn btn-outline-primary" id="btn-add-group">코드그룹 등록</a>
            </div>-->

            <div class="mb-3">
                <table class="table table-horizontal table-bordered">
                    <thead class="thead-strong">
                    <tr>
                        <th width="8%">주문번호</th>
                        <th>주문상품명</th>
                        <th width="8%">옵션</th>
                        <th width="4%">수량</th>
                        <th width="10% ">배송상태</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody id="deliveryItems">

                    </tbody>
                </table>
                <div>
                    <ul class="pagination pagination-sm justify-content-center" id="pagination-delivery-item" >
                    </ul>
                </div>

                <div class="mb-5">
                    <form id="form-save-delivery-status">
                        <div class="form-group">
                            <input type="hidden" name="id" id="id" />
                            <label for="deliveryStatus">배송상태</label>
                            <select id="deliveryStatus" >
                                {{#deliveryStatus}}
                                    <option value="{{name}}">{{description}}</option>
                                {{/deliveryStatus}}
                            </select>
                        </div>
                        <a class="btn btn-primary" id="btn-save-devliery-status">Submit</a>
                    </form>
                </div>

            </div>
        </div>
        <div class="tab-pane fade" id="div-delivery" role="tabpanel" aria-labelledby="tab-delivery" >
            <div class="div-crud-buttons">
                <a class="btn btn-outline-primary" id="btn-add-code">공통코드 등록</a>
            </div>

            <div class="mb-3" >
                <div class="tableArea h200">
                    <table class="table table-horizontal table-bordered">
                        <thead class="thead-strong">
                        <tr>
                            <th width="10%">그룹코드</th>
                            <th width="22%">코드이름(영문)</th>
                            <th width="22% ">코드이름(국문)</th>
                            <th width="24%">작성일시</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody id="codes">

                        </tbody>
                    </table>
                </div>

                <div>
                    <ul class="pagination pagination-sm justify-content-center" id="pagination-code" style="margin:20px 0">
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="static/js/order.js"></script>
{{>admin/layout/footer}}