{{>admin/layout/header}}

<div class="container" id="div-order-management" >
    <ul class="nav nav-tabs" id="adminOrderTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="tab-order-list" data-toggle="tab" href="#div-order-list" role="tab" aria-controls="div-order-list" aria-selected="true">주문조회</a>
        </li>
        <li class="nav-item" >
            <a class="nav-link" id="tab-order-detail" data-toggle="tab" href="#div-order-detail" role="tab" aria-controls="div-order-detail" aria-selected="false" style="display: none;">주문상세</a>
        </li>
        <li class="nav-item" >
            <a class="nav-link" id="tab-delivery-detail" data-toggle="tab" href="#div-delivery-detail" role="tab" aria-controls="div-delivery-detail" aria-selected="false" style="display: none;">배송상세</a>
        </li>
    </ul>
    <div class="tab-content" id="adminOrderTabContent">
        <div class="tab-pane fade show active" id="div-order-list" role="tabpanel" aria-labelledby="tab-order-list">
            <div class="pl-5 pt-3 pb-3 mt-3 mb-3 bg-light">
                <label class="mr-2" for="btn-search-order">주문번호</label>
                <input class="mr-2" type="text" name="code" id="input-search-order" >
                <a class="btn btn-sm btn-primary" id="btn-search-order">검색</a>

            </div>
            <!--<div class="div-crud-buttons">
                <a class="btn btn-outline-primary" id="btn-load-groups">코드그룹 불러오기</a>
                <a class="btn btn-outline-primary" id="btn-add-group">코드그룹 등록</a>
            </div>-->
            <div class="mb-3">
                <table class="table table-horizontal table-bordered">
                    <thead class="thead-strong">
                    <tr>
                        <th width="10%">주문번호</th>
                        <th>주문상품명</th>
                        <th width="15%">옵션</th>
                        <th width="4%">수량</th>
                        <th width="10% ">배송상태</th>
                    </tr>
                    </thead>
                    <tbody id="orders">

                    </tbody>
                </table>
                <div>
                    <ul class="pagination pagination-sm justify-content-center" id="pagination-order" >
                    </ul>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="div-order-detail" role="tabpanel" aria-labelledby="tab-order-detail" >
            <div class="p-2" >
                <h5>주문 정보</h5>
                <div class="mb-3 orderInfo p-2">
                    <div class="row">
                        <div class="col-2">주문번호</div>
                        <div class="col"><span id="orderId"></span></div>
                    </div>
                    <div class="row ">
                        <div class="col-2">주문일시</div>
                        <div class="col"><span id="orderDate"></span></div>
                    </div>
                    <div class="row">
                        <div class="col-2">주문자명</div>
                        <div class="col"><span id="orderName"></span></div>
                    </div>
                </div>

                <div class="p-2 mb-3 orderItem">
                    <table class="table table-horizontal table-bordered">
                        <thead class="thead-strong">
                        <tr>
                            <th>상품명</th>
                            <th width="15% ">옵션</th>
                            <th width="10% ">주문수량</th>
                            <th width="10% ">상품금액</th>
                        </tr>
                        </thead>
                        <tbody id="order-items">

                        </tbody>
                    </table>
                </div>
                <h4>배송정보</h4>
                <div class="mb-3 deliverInfo p-2">
                    <table class="table table-horizontal table-bordered">
                        <thead class="thead-strong">
                        <tr>
                            <th width="20%">배송아이디</th>
                            <th>배송상품요약</th>
                            <th width="30% ">등록일시</th>
                        </tr>
                        </thead>
                        <tbody id="deliveries">

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="tab-pane fade" id="div-delivery-detail" role="tabpanel" aria-labelledby="tab-delivery-detail" >
            <div class="p-2" >
                <h5>배송 정보</h5>
                <div class="mb-3 deliveryInfo p-2">
                    <div class="row">
                        <div class="col-2">배송아이디</div>
                        <div class="col"><span id="deliveryId"></span></div>
                    </div>
                    <div class="row ">
                        <div class="col-2">받는이</div>
                        <div class="col"><span id="receiverName"></span></div>
                    </div>
                    <div class="row">
                        <div class="col-2">연락처</div>
                        <div class="col"><span id="receiverTel"></span></div>
                    </div>
                    <div class="row">
                        <div class="col-2">배송주소</div>
                        <div class="col"><span id="receiverAddr1"></span><span id="receiverAddr2"></span></div>
                    </div>
                    <div class="row">
                        <div class="col-2">배송메세지</div>
                        <div class="col"><span id="message"></span></div>
                    </div>
                    <div class="row">
                        <div class="col-2">배송상태</div>
                        <div class="col"><span id="status"></span></div>
                    </div>
                    <div class="row">
                        <div class="col-2">송장번호</div>
                        <div class="col"><span id="invoiceNum"></span></div>
                    </div>
                </div>

                <div class="p-2 mb-3 deliveryItem">
                    <table class="table table-horizontal table-bordered">
                        <thead class="thead-strong">
                        <tr>
                            <th>상품명</th>
                            <th width="15% ">옵션</th>
                            <th width="10% ">주문수량</th>
                            <th width="10% ">상품금액</th>
                        </tr>
                        </thead>
                        <tbody id="delivery-items">

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="static/js/order.js"></script>
{{>admin/layout/footer}}